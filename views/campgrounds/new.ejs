<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="text-center">Add Campground</h1>
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="form-group mb-3">
        <label for="title">Title</label>
        <input
          type="text"
          class="form-control"
          placeholder="My Campground"
          id="title"
          name="campground[title]"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="form-group mb-3">
        <label for="location">Location</label>
        <input
          class="form-control"
          type="text"
          placeholder="City, State"
          id="location"
          name="campground[location]"
          required
        />

        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="form-group mb-3">
        <label for="description">Description</label>
        <textarea
          class="form-control"
          id="description"
          placeholder="Describe the Campround"
          name="campground[description]"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label for="price">Campground Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text">Rs.</span>
          <input
            type="text"
            class="form-control"
            id="price"
            name="campground[price]"
            placeholder="0.00"
            required
          />
          <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="input-group mb-3">
          <div class="custom-file">
            <input
              id="image"
              type="file"
              multiple
              class="custom-file-input"
              name="image"
            />
            <label class="custom-file-label" for="image">Add Image(s)</label>
          </div>
        </div>
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
  </div>
</div>
