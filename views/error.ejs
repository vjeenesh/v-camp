<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= err.message %></h4>
      <p><%= err.statusCode%> - <%= err.message %></p>
      <hr />
      <% if (process.env.NODE_ENV !== "production") { %>
      <p><%= err.stack %></p>
      <% } %>
    </div>
  </div>
</div>
